#This script file was automatically generated by PBAlineoS
#!/bin/bash
#PBS -S /bin/sh
#PBS -l nodes=12:ppn=4
#PBS -r n
#PBS -m n
#PBS -j oe

nodes=`cat $PBS_NODEFILE`
nnodes=`wc $PBS_NODEFILE | awk '{print $1}'`
confile=~/ip.$PBS_JOBID.conf
touch $confile
j="init"
for i in $nodes
do
if [ $j != $i ]
then echo "gb$i:4" >> $confile
fi
j=$i
done


#Here is my code
export taskname=tttt
export workdir=/tmp/$USER.$PBS_JOBID
export MKL_DIR=/opt/intel/cmkl/9.0/lib/em64t
export OMP_NUM_THREADS=48
rm -rf $workdir/$taskname
mkdir  $workdir/$taskname


cp ~debnath/qdots/3level_2nd/nnn/qd.exe       $workdir/$taskname/.
cp ~debnath/qdots/3level_2nd/nnn/jj.input     $workdir/$taskname/.

cd $workdir/$taskname
time ./qd.exe<jj.input>jj.output

cp -f $workdir/$taskname/*.* ~debnath/qdots/3level_2nd/nnn/.

rm -rf $workdir/$taskname

